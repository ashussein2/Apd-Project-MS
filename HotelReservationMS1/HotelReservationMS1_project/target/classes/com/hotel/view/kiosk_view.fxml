<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hotel.controller.KioskController"
            prefWidth="900" prefHeight="500">

    <top>
        <VBox alignment="CENTER">
            <padding>
                <Insets top="30" bottom="10"/>
            </padding>
            <children>
                <Label text="Self-Service Kiosk"
                       style="-fx-font-size: 26px; -fx-font-weight: bold;"/>
                <Label text="Start your booking in a few simple steps."
                       style="-fx-font-size: 13px; -fx-text-fill: #6b7280;"/>
            </children>
        </VBox>
    </top>

    <center>
        <HBox alignment="CENTER">
            <children>
                <GridPane hgap="12" vgap="14" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="20" bottom="20" left="40" right="40"/>
                    </padding>
                    <children>
                        <Label text="Adults:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="adultsField"
                                   prefWidth="200"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Children:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="childrenField"
                                   prefWidth="200"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Check-in:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="checkInPicker"
                                    GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Check-out:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="checkOutPicker"
                                    GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>
            </children>
        </HBox>
    </center>

    <bottom>
        <VBox spacing="8" alignment="CENTER">
            <padding>
                <Insets bottom="20"/>
            </padding>
            <children>
                <Label fx:id="messageLabel"
                       style="-fx-text-fill: #b91c1c;"/>
                <HBox alignment="CENTER" spacing="12">
                    <children>
                        <Button text="Start Booking"
                                onAction="#onStartBooking"
                                prefWidth="110"/>
                        <Button text="Close"
                                onAction="#onClose"
                                prefWidth="80"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>
