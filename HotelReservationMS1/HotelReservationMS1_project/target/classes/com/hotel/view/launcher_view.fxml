<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hotel.controller.LauncherController"
            prefWidth="900" prefHeight="500">

    <center>
        <VBox alignment="CENTER" spacing="24">
            <padding>
                <Insets top="40" bottom="40" left="40" right="40"/>
            </padding>

            <children>
                <Label text="Hotel Reservation System"
                       style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

                <Label text="Choose a module to open"
                       style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>

                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button text="Kiosk"
                                prefWidth="120"
                                onAction="#onOpenKiosk"/>
                        <Button text="Admin"
                                prefWidth="120"
                                onAction="#onOpenAdmin"/>
                        <Button text="Feedback"
                                prefWidth="120"
                                onAction="#onOpenFeedback"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
