<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hotel.controller.FeedbackController"
            prefWidth="800" prefHeight="500">

    <top>
        <VBox alignment="CENTER">
            <padding>
                <Insets top="30" bottom="10"/>
            </padding>
            <children>
                <Label text="Guest Feedback"
                       style="-fx-font-size: 26px; -fx-font-weight: bold;"/>
                <Label text="Tell us how your stay was."
                       style="-fx-font-size: 13px; -fx-text-fill: #6b7280;"/>
            </children>
        </VBox>
    </top>

    <center>
        <VBox spacing="14" alignment="TOP_CENTER">
            <padding>
                <Insets top="10" left="40" right="40"/>
            </padding>

            <children>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Rating (1â€“5):"/>
                        <Slider fx:id="ratingSlider"
                                min="1" max="5" value="5"
                                majorTickUnit="1" minorTickCount="0"
                                snapToTicks="true"
                                showTickMarks="true"
                                showTickLabels="true"
                                prefWidth="260"/>
                    </children>
                </HBox>

                <Label text="Comments:" alignment="CENTER_LEFT"
                       maxWidth="Infinity"/>

                <TextArea fx:id="commentsArea"
                          prefRowCount="6"
                          wrapText="true"
                          maxWidth="600"/>
            </children>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="8" alignment="CENTER">
            <padding>
                <Insets bottom="20"/>
            </padding>
            <children>
                <Label fx:id="messageLabel"
                       style="-fx-text-fill: #15803d;"/>
                <HBox alignment="CENTER" spacing="12">
                    <children>
                        <Button text="Submit" onAction="#onSubmit" prefWidth="90"/>
                        <Button text="Close" onAction="#onClose" prefWidth="90"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>
